{{> header}}

<div style="font-family: 'Arial', sans-serif; max-width: 600px; margin: 0 auto; border: 2px solid #ffc2d1; border-radius: 10px; overflow: hidden;">
  <div style="background-color: #ffc2d1; padding: 20px; color: white;">
    <h1 style="margin: 0;">Welcome to Our Community!</h1>
  </div>

  <div style="padding: 20px; background-color: #fff; color: #333;">
    <h2 style="color: #ffc2d1;">Hello {{name}}!</h2>
    <p style="font-size: 16px; line-height: 1.6;">{{text}}</p>
    
    <div style="text-align: center; margin: 25px 0;">
      <img src='cid:logo@company' alt='Company Logo' style="max-width: 150px; border: 2px solid #ffc2d1; border-radius: 8px;" />
    </div>

    <div style="background-color: #f8f8f8; padding: 15px; border-radius: 8px; margin-top: 20px;">
      <p style="margin: 0;">Need help? Contact us anytime!</p>
    </div>
  </div>

  {{> footer}}
</div>